{
    "name": "uws",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "engines": {
        "node": ">= 16"
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "dev-server-tictactoe": "nodemon -e ts --exec \"npm run build-server && npm run run-server-tictactoe\"",
        "dev-server-snake": "nodemon -e ts --exec \"npm run build-server && npm run run-server-snake\"",
        "dev-server-gofish": "nodemon -e ts --exec \"npm run build-server && npm run run-server-gofish\"",
        "build-server": "rm -rf dist-server && tsc --build tsconfig.nodejs.json",
        "run-server-tictactoe": "node --experimental-specifier-resolution=node dist-server/tictactoe/mainServer.js",
        "run-server-snake": "node --experimental-specifier-resolution=node dist-server/snake/mainServer.js",
        "run-server-gofish": "node --experimental-specifier-resolution=node dist-server/gofish/mainServer.js",
        "test": "vitest",
        "lint": "npx eslint src --fix",
        "prettier": "npx prettier src --check --write",
        "format": "npm run prettier && npm run lint"
    },
    "devDependencies": {
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^5.33.0",
        "@typescript-eslint/parser": "^5.33.0",
        "eslint": "^8.22.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "nodemon": "^2.0.19",
        "pixi.js": "^6.5.1",
        "prettier": "^2.7.1",
        "typescript": "^4.6.4",
        "vite": "^3.0.7",
        "vitest": "^0.21.1"
    },
    "dependencies": {
        "msgpackr": "^1.7.0-alpha3",
        "uuid": "^8.3.2",
        "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.10.0"
    }
}
